        <section class="login">
            <form action="/login" method="POST">
                <h1>Log-In</h1>
                <input type="text" name="username" placeholder="Username" maxlength="15" required>
                <input type="password" name="password" placeholder="Password" minlength="8" required>
                <input type="submit">
            </form>
            <form action="/sign-up" method="POST" onsubmit="compare_input(event);">
                <h1>Sign up today!</h1>
                <input type="email" name="email" placeholder="Email Address" required>
                <input type="text" name="username" placeholder="Username" maxlength="15" minlength="8" required>
                <input type="password" id="first-password" name="password" placeholder="Password" required>
                <input type="password" id="second-password" placeholder="Confirm Password" required>
                <input type="submit">
            </form>
        </section>
        <section class="posts">
            Posts Section
            <div>Post
                <div>Username</div>
                <div>Post text</div>
                <div>Likes</div>
                <div>Comments</div>
                <button class="authenticated-section {{.Authenticated}}">Like</button>
                <button class="authenticated-section {{.Authenticated}}">Comment</button>
            </div>
            <div class="authenticated-section {{.Authenticated}}">User correctly authenticated!
                <button>Create new post</button>
                <form action="new-post" method="POST">
                    <input type="submit" value="Send">
                </form>
            </div>
